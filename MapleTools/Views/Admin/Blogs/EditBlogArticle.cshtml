@model MapleTools.Models.Content.BlogArticle

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header">
            <h4 class="mb-0">Edit Blog</h4>
        </div>
        <div class="card-body">
            <form asp-controller="Admin" asp-action="EditBlogArticle" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Id"></label>
                    <input asp-for="Id" type="hidden" class="form-control" value="@Model.Id" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ContentPath"></label>
                    <input asp-for="ContentPath" type="hidden" class="form-control" value="@Model.ContentPath" />
                    <span asp-validation-for="ContentPath" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="HtmlContent"></label>
                    <textarea asp-for="HtmlContent" class="form-control" ></textarea>
                    <span asp-validation-for="HtmlContent" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Blogs" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>